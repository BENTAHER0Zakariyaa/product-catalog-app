<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_sm"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:background="@drawable/login_layout_card"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/padding_sm"
                android:elevation="8dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/idTextViewLabel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="10dp"
                        android:paddingBottom="@dimen/padding_sm"
                        android:fontFamily="@font/roboto_light"
                        android:textColor="@color/text_primary"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/idTextViewTotal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12dp"
                            android:text="200"
                            android:fontFamily="@font/roboto_black"
                            android:textColor="@color/text_primary"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12dp"
                            android:text=" Dh"
                            android:fontFamily="@font/roboto_black"
                            android:textColor="@color/text_success"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="bottom">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="@dimen/margin_sm"
                            >
                            <Button
                                android:id="@+id/idButtonDecrement"
                                android:layout_width="64dp"
                                android:layout_height="24dp"
                                android:textColor="@color/text_primary"
                                android:fontFamily="@font/roboto_bold_condensed"
                                android:text="-"
                                android:textSize="14dp"
                                android:background="@drawable/decrement_increment_button"/>
                            <EditText
                                android:id="@+id/idEditTextQuantity"
                                android:layout_width="100dp"
                                android:layout_height="match_parent"
                                android:layout_marginHorizontal="@dimen/margin_sm"
                                android:inputType="number"
                                android:textAlignment="center"
                                android:textSize="14dp"
                                android:fontFamily="@font/roboto_bold"
                                android:textColor="@color/text_primary"
                                android:background="@drawable/count_input"
                                android:enabled="false"/>
                            <Button
                                android:id="@+id/idButtonIncrement"
                                android:layout_width="64dp"
                                android:layout_height="24dp"
                                android:textColor="@color/text_primary"
                                android:fontFamily="@font/roboto_bold_condensed"
                                android:text="+"
                                android:textSize="14dp"
                                android:background="@drawable/decrement_increment_button"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:gravity="center|end">

                    <ImageView
                        android:id="@+id/idImageViewProduct"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/idLinearLayoutDelete"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="8"
            android:gravity="center"
            android:layout_marginStart="@dimen/margin_sm"
            >
            <android.support.constraint.utils.ImageFilterButton
                android:id="@+id/idButtonDelete"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@color/bg_secondary"
                android:fontFamily="@font/roboto_bold"
                android:background="@drawable/delete_button"
                android:padding="@dimen/padding_md"
                android:elevation="8dp"
                android:src="@drawable/ic_delete_64"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>