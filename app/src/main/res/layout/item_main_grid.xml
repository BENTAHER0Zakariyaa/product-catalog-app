<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".ItemMainGrid">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:alpha="@android:integer/config_mediumAnimTime"
        android:layout_margin="8dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">
            <TextView
                android:id="@+id/idTextViewCategory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:textSize="12dp"
                android:layout_marginBottom="8dp"
                android:text="Produit"/>
            <ImageView
                android:id="@+id/idImageView"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginBottom="8dp"/>
            <TextView
                android:id="@+id/idTextViewLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:textSize="12dp"
                android:layout_marginBottom="8dp"
                android:text="Produit"/>
            <TextView
                android:id="@+id/idTextViewPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="textEnd"
                android:textSize="16dp"
                android:text="200dhs"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>