<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProductDetailsActivity"
    android:orientation="vertical"
    android:padding="@dimen/padding_sm"
    android:background="@color/bg_primary">
    <ImageButton
        android:id="@+id/idImageButtonBack"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:text="@string/action_back"
        android:background="@drawable/cancel_button"
        android:textColor="@color/bg_secondary"
        android:layout_marginBottom="@dimen/padding_sm"
        android:src="@drawable/ic_arrow_back_64"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="@drawable/login_layout_card"
        android:padding="@dimen/margin_sm">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="3"
            >
            <android.support.v7.widget.RecyclerView
                android:id="@+id/idRecyclerViewProductImages"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                />
        </LinearLayout>
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:orientation="vertical"
           android:layout_weight="1"
           android:layout_marginStart="@dimen/margin_sm"
           >
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="vertical">
               <TextView
                   android:id="@+id/idTextViewLabel"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textAlignment="textStart"
                   android:textColor="@color/text_primary"
                   android:textSize="16dp"
                   android:layout_marginBottom="@dimen/margin_xsm"/>
               <TextView
                   android:id="@+id/idTextViewCategory"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textAlignment="textStart"
                   android:textSize="12dp"
                   android:textColor="@color/text_primary_50"
                   android:fontFamily="@font/roboto_bold"
                   android:layout_marginBottom="@dimen/margin_md"/>
           </LinearLayout>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginBottom="@dimen/margin_sm"
               >
               <TextView
                   android:id="@+id/idTextViewPrice"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textSize="16dp"
                   android:text="200"
                   android:fontFamily="@font/roboto_black"
                   android:textColor="@color/text_primary"/>
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textSize="16dp"
                   android:text=" Dh"
                   android:fontFamily="@font/roboto_black"
                   android:textColor="@color/text_success"
                   />
           </LinearLayout>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="1dp"
               android:layout_marginVertical="@dimen/margin_md"
               android:background="@color/text_primary"/>
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textSize="16dp"
               android:fontFamily="@font/roboto_black"
               android:text="@string/text_description"
               android:layout_marginBottom="@dimen/margin_sm"
               android:textColor="@color/text_primary_50"
               />
           <TextView
               android:id="@+id/idTextViewDescription"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textSize="12dp"
               android:fontFamily="@font/roboto_light"
               android:textColor="@color/text_primary"/>
       </LinearLayout>


    </LinearLayout>


</LinearLayout>