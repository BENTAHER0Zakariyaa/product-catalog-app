<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp"
        android:background="@drawable/catalog_layout_grid_item"
        android:layout_margin="@dimen/padding_xsm"
        android:elevation="2dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/idTextViewPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:text="200"
                android:fontFamily="@font/roboto_black"
                android:textColor="@color/text_primary"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:text=" Dh"
                android:fontFamily="@font/roboto_black"
                android:textColor="@color/text_success"
                />
        </LinearLayout>
        <ImageView
            android:id="@+id/idImageView"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginBottom="8dp"/>
        <TextView
            android:id="@+id/idTextViewLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/text_primary"
            android:fontFamily="@font/roboto_bold"
            android:ellipsize="end"
            android:maxLines="1"
            android:textSize="14dp"/>

    </LinearLayout>
</LinearLayout>