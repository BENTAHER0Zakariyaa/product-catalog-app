<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/padding_sm">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/login_layout_card"
        android:paddingHorizontal="@dimen/padding_sm"
        android:paddingVertical="@dimen/padding_sm"
        android:gravity="center"
        android:orientation="vertical"
        tools:ignore="UselessParent">

        <ImageView
            android:id="@+id/idImageViewIcon"
            android:layout_width="64dp"
            android:layout_height="64dp"
           />
        <TextView
            android:id="@+id/idTextViewMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_primary"
            android:fontFamily="@font/roboto_black"
            android:textAlignment="center"
            android:layout_marginVertical="@dimen/margin_lg"
            android:textSize="16sp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <Button
                android:id="@+id/idButtonAccept"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_weight="1"
                android:textColor="@color/bg_secondary"
                android:fontFamily="@font/roboto_bold"
                android:text="@string/action_accept"
                android:background="@drawable/login_layout_button"
                android:layout_marginEnd="@dimen/margin_sm"/>
            <Button
                android:id="@+id/idButtonCancel"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_weight="1"
                android:textColor="@color/bg_secondary"
                android:fontFamily="@font/roboto_bold"
                android:text="@string/action_cancel"
                android:background="@drawable/cancel_button"
                android:layout_marginStart="@dimen/margin_sm"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>