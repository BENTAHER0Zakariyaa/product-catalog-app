<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_secondary"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="16dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/idTextViewProductLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:paddingBottom="@dimen/padding_sm"
                    android:fontFamily="@font/roboto_black"
                    android:textColor="@color/text_primary"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/idTextViewProductPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16dp"
                        android:text="200"
                        android:fontFamily="@font/roboto_black"
                        android:textColor="@color/text_primary"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16dp"
                        android:text=" Dh"
                        android:fontFamily="@font/roboto_black"
                        android:textColor="@color/text_success"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="bottom">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="@dimen/margin_sm"
                        >
                        <Button
                            android:id="@+id/idButtonDecrement"
                            android:layout_width="64dp"
                            android:layout_height="40dp"
                            android:textColor="@color/text_secondary"
                            android:fontFamily="@font/roboto_bold_condensed"
                            android:text="-"
                            android:textSize="22dp"
                            android:background="@drawable/decrement_increment_button"/>
                        <EditText
                            android:id="@+id/idEditTextQuantity"
                            android:layout_width="100dp"
                            android:layout_height="match_parent"
                            android:layout_marginHorizontal="@dimen/margin_sm"
                            android:text="0"
                            android:inputType="number"
                            android:textAlignment="center"
                            android:textSize="22dp"
                            android:fontFamily="@font/roboto_bold"
                            android:background="@drawable/count_input"/>
                        <Button
                            android:id="@+id/idButtonIncrement"
                            android:layout_width="64dp"
                            android:layout_height="40dp"
                            android:textColor="@color/text_secondary"
                            android:fontFamily="@font/roboto_bold_condensed"
                            android:text="+"
                            android:textSize="22dp"
                            android:background="@drawable/decrement_increment_button"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2">
                <ImageView
                    android:id="@+id/idTextViewProductImage"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginVertical="@dimen/margin_md"
            android:background="@color/text_primary"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <Button
                android:id="@+id/idButtonAdd"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_weight="1"
                android:textColor="@color/bg_secondary"
                android:fontFamily="@font/roboto_bold"
                android:text="@string/action_add"
                android:background="@drawable/login_layout_button"
                android:layout_marginRight="@dimen/margin_sm"/>
            <Button
                android:id="@+id/idButtonCancel"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_weight="1"
                android:textColor="@color/bg_secondary"
                android:fontFamily="@font/roboto_bold"
                android:text="@string/action_cancel"
                android:background="@drawable/cancel_button"
                android:layout_marginLeft="@dimen/margin_sm"/>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>